root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = false
max_line_length = 120
tab_width = 2

# JavaScript, TypeScript, JSON
[{*.ats,*.cts,*.mts,*.ts,*.cjs,*.js,*.har,*.jsb2,*.jsb3,*.json,*.jsonc,*.postman_collection,*.postman_environment,.babelrc,.eslintrc,.prettierrc,.stylelintrc,.ws-context,jest.config}]
indent_size = 2
tab_width = 2

# HTML 관련
[{*.htm,*.html,*.sht,*.shtm,*.shtml}]
indent_size = 2
tab_width = 2

# HTTP 요청
[{*.http,*.rest}]
indent_size = 0